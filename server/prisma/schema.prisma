generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model Users {
  id Int @id @default(autoincrement())
  user_name String
  last_name String
  email String @unique
  password String
  role  Role @default(SimpleUser)
 }

 enum Role {
  Admin
  SimpleUser
 }

model Parts {
  part_id     Int         @id @default(autoincrement())
  part_number String
  part_title  String
  lawCategory LawCategory[]
}

model LawCategory {
  category_id     Int      @id @default(autoincrement())
  catgory_number String?
  category_title  String?
  part_id         Int
  Parts            Parts    @relation(fields: [part_id], references: [part_id])
  laws Laws[]
}

model Laws {
  law_id           Int         @id @default(autoincrement())
  law_name         String
  law_description  String
  written_date     DateTime
  category_id      Int
  LawCategory      LawCategory @relation(fields: [category_id], references: [category_id])
}

